@page
@model TicketSystem.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<div>
    <h4>Employee</h4>
    <hr />
    <form method="post">
        <input type="hidden" asp-for="Employee.EmployeeID" />
        <input type="hidden" asp-for="Employee.Email" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.Department)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Department.DepartmentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.ModifDate17118162)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.ModifDate17118162)
            </dd>
            <dd>
                <table class="table">
                    @if (Model.Employee.Email.Contains("admin"))
                    {
                        <tr>
                            <th>Tickets accepted</th>
                        </tr>
                        @foreach (var tickets in Model.Employee.АcceptedАТickets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => tickets.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => tickets.OpenDate)
                                </td>
                            </tr>
                        }
                    }
                    @if (Model.Employee.Email.Contains("employee"))
                    {
                        <tr>
                            <th>Created tickets</th>
                        </tr>
                        @foreach (var tickets in Model.Employee.CreatorTickets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => tickets.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => tickets.OpenDate)
                                </td>
                            </tr>
                        }
                    }
                </table>
            </dd>
            <dd>
                @if (Model.Employee.Email.Contains("admin"))
                {
                    <button type="submit" value="Export">Export Excel</button>
                }
                @if (Model.Employee.Email.Contains("employee"))
                {
                    <button type="submit" value="Export">Export Excel</button>
                }
            </dd>
        </dl>
    </form>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.EmployeeID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
