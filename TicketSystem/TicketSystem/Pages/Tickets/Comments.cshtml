@page
@model TicketSystem.Pages.Tickets.CommentsModel
@{
    ViewData["Title"] = "Add comment";
}

<h1>Add Comment</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Ticket.TicketID" />
    <div class="form-group">
        <label asp-for="Ticket.Comment" class="control-label"></label>
        <input asp-for="Ticket.Comment" class="form-control" />
        <span asp-validation-for="Ticket.Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>
