@page
@model TicketSystem.Pages.TicketStatuses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TicketStatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketStatus.StatusName" class="control-label"></label>
                <input asp-for="TicketStatus.StatusName" class="form-control" />
                <span asp-validation-for="TicketStatus.StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatus.Ticket.Title" class="control-label"></label>
                <select asp-for="TicketStatus.TicketID" class="form-control" asp-items="ViewBag.TicketID">
                    <option value="">-- Select Ticket --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatus.StatusDate" class="control-label"></label>
                <input asp-for="TicketStatus.StatusDate" class="form-control" />
                <span asp-validation-for="TicketStatus.StatusDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketStatus.Employee.Email" class="control-label" hidden="hidden"></label>
                <select asp-for="TicketStatus.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID" hidden="hidden">
                    <option value="">-- Select Employee --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
